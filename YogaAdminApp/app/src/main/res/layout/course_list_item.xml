<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Type of Class -->
        <TextView
            android:id="@+id/tvCourseType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flow Yoga"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <!-- Day and Time -->
        <TextView
            android:id="@+id/tvCourseDayTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tuesday at 10:00"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp" />

        <!-- Capacity and Duration -->
        <TextView
            android:id="@+id/tvCourseCapacityDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 people, 60 mins"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp" />

        <!-- Price per class -->
        <TextView
            android:id="@+id/tvCoursePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â£10"
            android:textSize="16sp"
            android:textColor="@android:color/holo_green_dark"
            android:layout_marginTop="4dp" />

        <!-- Skill Level (always visible) -->
        <TextView
            android:id="@+id/tvSkillLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skill: Not specified"
            android:textSize="14sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginTop="4dp" />

        <!-- Description (always visible) -->
        <TextView
            android:id="@+id/tvCourseDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No description provided."
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="4dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
